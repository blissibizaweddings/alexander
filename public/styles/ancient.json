{
  "version": 8,
  "name": "Alexander Antique",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://demotiles.maplibre.org/tiles/tiles.json"
    }
  },
  "sprite": "https://demotiles.maplibre.org/styles/osm-bright/sprite",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f4ecdc"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#cfdadf",
        "fill-opacity": 0.85
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#b1c0c6",
        "line-width": 0.8,
        "line-opacity": 0.65
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#ead7b5",
        "fill-opacity": 0.55
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#e2c8a2",
        "fill-opacity": 0.45
      }
    },
    {
      "id": "roads-major",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", ["get", "class"], "motorway", "trunk", "primary"],
      "paint": {
        "line-color": "#c0975a",
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.3, 8, 1.4],
        "line-opacity": 0.55
      }
    },
    {
      "id": "roads-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", ["get", "class"], "secondary", "tertiary", "minor"],
      "paint": {
        "line-color": "#d8b98a",
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.15, 8, 0.9],
        "line-opacity": 0.4
      }
    },
    {
      "id": "settlement-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", ["get", "class"], "city"],
      "layout": {
        "text-field": ["coalesce", ["get", "name:latin"], ["get", "name"]],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 3, 11, 8, 17],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.12
      },
      "paint": {
        "text-color": "#5b3d1d",
        "text-halo-color": "rgba(244, 236, 220, 0.88)",
        "text-halo-width": 1.6
      }
    },
    {
      "id": "settlement-small-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["!=", ["get", "class"], "city"],
      "layout": {
        "text-field": ["coalesce", ["get", "name:latin"], ["get", "name"]],
        "text-font": ["Open Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 9, 8, 13],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#63482a",
        "text-halo-color": "rgba(244, 236, 220, 0.82)",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "water-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "water_name",
      "layout": {
        "text-field": ["coalesce", ["get", "name:latin"], ["get", "name"]],
        "text-font": ["Open Sans Italic"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 11, 8, 14]
      },
      "paint": {
        "text-color": "#6a7c86",
        "text-halo-color": "rgba(244, 236, 220, 0.75)",
        "text-halo-width": 1.0
      }
    }
  ]
}
